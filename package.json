{
  "name": "rocktags",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cd rocktags && next dev --turbopack",
    "build": "cd rocktags && next build --turbopack", 
    "start": "cd rocktags && next start",
    "lint": "cd rocktags && eslint",
    "functions:build": "cd rocktags/functions && tsc",
    "functions:build:watch": "cd rocktags/functions && tsc --watch",
    "functions:serve": "cd rocktags/functions && npm run build && firebase emulators:start --only functions",
    "functions:shell": "cd rocktags/functions && npm run build && firebase functions:shell",
    "functions:start": "cd rocktags/functions && npm run shell",
    "functions:deploy": "cd rocktags/functions && firebase deploy --only functions",
    "functions:logs": "cd rocktags/functions && firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.4.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.0.1",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "firebase-functions-test": "^3.1.0",
    "tailwindcss": "^4",
    "typescript": "^5.7.3"
  }
}